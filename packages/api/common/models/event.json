{
  "name": "event",
  "plural": "events",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Timestamp": {}
  },
  "properties": {
    "initiativeId": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "lead": {
      "type": "number",
      "required": true
    },
    "createdOn": {
      "type": "date",
      "required": false,
      "default" :  "$now"
    },
    "createdBy":{
      "type" : "number",
      "required" : true
    },
     "categoryId":{
      "type" : "number",
      "required" : true
    },
    "participantId":{
      "type" : "array"
    }
  },
  "validations": [],
  
  "relations": {
    "participants": {
      "type": "hasMany",
      "model": "participant",
      "foreignKey": "id",
      "options": {
        "disableInclude": false
      }
    },
    "enrollments": {
      "type": "hasMany",
      "model": "enrollment",
      "foreignKey": "eventId",
      "options": {
        "disableInclude": false
      }
    },
    "usersLead": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "lead",
      "options": {
        "disableInclude": true
      }
    },
     "usersCreatedBy": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "createdBy",
      "options": {
        "disableInclude": true
      }
    },
     "category": {
      "type": "belongsTo",
      "model": "category",
      "foreignKey": "categoryId",
      "options": {
        "disableInclude": true
      }
     }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "*"
	},
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "updateAttributes"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__create__enrollments"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__findById__enrollments"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__get__enrollments"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__updateById__enrollments"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__destroyById__enrollments"
    }
  ],
  "methods": {}
}

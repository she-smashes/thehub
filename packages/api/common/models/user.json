{
  "name": "user",
  "plural": "users",
  "base": "User",
  "mixins": {
     "Timestamp": {}
   },
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "points": {
      "type": "number",
      "required": true
    },
    "logonid": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "tasks": {
      "type": "hasMany",
      "model": "task",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "enrollments": {
      "type": "hasMany",
      "model": "enrollment",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }  
  ],
  "methods": {}
}
